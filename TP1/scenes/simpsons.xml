<SCENE>

  <!-- Initial values -->
  <INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="0" y="0" z="0"/>
    <rotation axis="x" angle="0"/>
    <rotation axis="y" angle="0"/>
    <rotation axis="z" angle="0"/>
    <scale sx="1" sy="1" sz="1"/>
    <reference length="5"/>
  </INITIALS>

  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1"/>
    <background r="0" g="0" b="0" a="1"/>
  </ILLUMINATION>

  <!-- Lights -->
  <LIGHTS>
    <LIGHT id="light0">
      <enable value="1"/>
      <position x="0" y="10" z="0" w="1"/>
      <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
      <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
    </LIGHT>

    <LIGHT id="light1">
      <enable value="1"/>
      <position x="30" y="10" z="0" w="1"/>
      <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
      <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
    </LIGHT>

    <LIGHT id="light2">
      <enable value="1"/>
      <position x="0" y="10" z="20" w="1"/>
      <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0"/>
      <specular r="1.0" g="1.0" b="1.0" a="1.0"/>
    </LIGHT>

    <LIGHT id="light3">
      <enable value="1"/>
      <position x="30" y="10" z="20" w="1"/>
      <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0"/>
      <specular r="0.6" g="0.6" b="0.6" a="1.0"/>
    </LIGHT>

  </LIGHTS>

  <!-- Textures -->
  <TEXTURES>
    <!-- Rocks -->
    <TEXTURE id="rocks">
      <file path="images/rocks.jpg"/>
      <amplif_factor s="1" t="1"/>
    </TEXTURE>

  </TEXTURES>

  <MATERIALS>
    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
      <shininess value="1"/>
      <specular r="0.0" g="0.0" b="0.0" a="1"/>
      <diffuse r="0.4" g="0.4" b="0.4" a="1"/>
      <ambient r="0.4" g="0.4" b="0.4" a="1"/>
      <emission r="0.0" g="0.0" b="0.0" a="1"/>
    </MATERIAL>

  </MATERIALS>

  <!-- The leaves -->
  <LEAVES></LEAVES>

  <!-- The nodes -->
  <NODES>

    <ROOT id="root"/>

    <!-- The root node -->
    <NODE id="root">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <DESCENDANTS>
        <NODEREF id="chao"/>
        <NODEREF id="mesa"/>
        <NODEREF id="candeeiro"/>
      </DESCENDANTS>

    </NODE>

    <!-- The floor -->
    <NODE id="chao">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <SCALE sx="1" sy="1" sz="1"/>
      <TRANSLATION x="0" y="0" z="5"/>
      <ROTATION axis="x" angle="0"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 5 5 0"/>
      </DESCENDANTS>
    </NODE>

    <!-- The Table  -->
    <NODE id="mesa">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>
      <DESCENDANTS>
        <NODEREF id="perna1"/>
        <NODEREF id="perna2"/>
        <NODEREF id="perna3"/>
        <NODEREF id="perna4"/>
        <NODEREF id="tampomesa1"/>
        <NODEREF id="tampomesa2"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="tampomesa2">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="2" z="4"/>
      <ROTATION axis="x" angle="-90"/>
      <SCALE sx="1" sy="1" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 4 6 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="tampomesa1">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="1" y="1" z="3"/>
      <ROTATION axis="x" angle="-90"/>
      <SCALE sx="1" sy="1" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 3 4 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="ladomesa1">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="1" y="1" z="0"/>
      <ROTATION axis="x" angle="0"/>
      <SCALE sx="1" sy="1" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 4 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="perna1">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <SCALE sx="1" sy="1" sz="1"/>
      <TRANSLATION x="0" y="0" z="0"/>
      <ROTATION axis="x" angle="0"/>

      <DESCENDANTS>
        <NODEREF id="perna"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="perna2">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <SCALE sx="1" sy="1" sz="1"/>
      <TRANSLATION x="0" y="0" z="5"/>
      <ROTATION axis="x" angle="0"/>

      <DESCENDANTS>
        <NODEREF id="perna"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="perna3">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <SCALE sx="1" sy="1" sz="1"/>
      <TRANSLATION x="5" y="0" z="0"/>
      <ROTATION axis="x" angle="0"/>

      <DESCENDANTS>
        <NODEREF id="perna"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="perna4">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <SCALE sx="1" sy="1" sz="1"/>
      <TRANSLATION x="0" y="0" z="0"/>
      <ROTATION axis="x" angle="0"/>

      <DESCENDANTS>
        <NODEREF id="perna"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="perna">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>


      <DESCENDANTS>
        <NODEREF id="faceperna1"/>
        <NODEREF id="faceperna2"/>
        <NODEREF id="faceperna3"/>
        <NODEREF id="faceperna4"/>
        <NODEREF id="faceperna5"/>
        <NODEREF id="faceperna6"/>
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceperna1">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="1" y="0" z="1"/>
      <ROTATION axis="y" angle="90"/>
      <SCALE sx="1" sy="2" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceperna2">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="2" z="0"/>
      <ROTATION axis="x" angle="180"/>
      <SCALE sx="1" sy="2" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceperna3">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="0" z="0"/>
      <ROTATION axis="y" angle="-90"/>
      <SCALE sx="1" sy="2" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceperna4">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="0" z="1"/>
      <ROTATION axis="x" angle="0"/>
      <SCALE sx="1" sy="2" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceperna5">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="0" z="0"/>
      <ROTATION axis="x" angle="90"/>
      <SCALE sx="1" sy="1" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <!-- Another cube face -->
    <NODE id="faceperna6">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="2" z="1"/>
      <ROTATION axis="x" angle="-90"/>
      <SCALE sx="1" sy="1" sz="1"/>

      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>

    </NODE>

    <!--   -->

    <!-- The Candle  -->

    <NODE id="candeeiro">
      <MATERIAL id="null"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="0" z="0"/>

      <DESCENDANTS>
        <NODEREF id="basecandeeiro"/>
        <NODEREF id="troncocandeeiro"/>
        <NODEREF id="cabecacandeeiro"/>
      </DESCENDANTS>

    </NODE>

    <NODE id="basecandeeiro">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="6" z="0"/>
      <ROTATION axis="x" angle="90"/>
      <SCALE sx="0.5" sy="0.5" sz="0.5"/>

      <DESCENDANTS>
        <LEAF type="cylinder" args="1 2 2 1 20 1 1"/>
      </DESCENDANTS>

    </NODE>

    <NODE id="troncocandeeiro">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="8" z="0"/>
      <ROTATION axis="x" angle="90"/>
      <SCALE sx="0.4" sy="0.4" sz="0.4"/>

      <DESCENDANTS>
        <LEAF type="cylinder" args="6 1 1 1 20 1 1"/>
      </DESCENDANTS>

    </NODE>

    <NODE id="cabecacandeeiro">
      <MATERIAL id="defaultMaterial"/>
      <TEXTURE id="null"/>

      <TRANSLATION x="0" y="9" z="0"/>
      <ROTATION axis="x" angle="90"/>
      <SCALE sx="0.4" sy="0.4" sz="0.4"/>

      <DESCENDANTS>
        <LEAF type="cylinder" args="4 2 4 1 20 0 0"/>
      </DESCENDANTS>

    </NODE>

    <!--   -->
  </NODES>

</SCENE>
